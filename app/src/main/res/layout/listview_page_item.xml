<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:background="@android:color/background_dark">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/pagePictureItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/term1_algebra_05" />

    <ru.spbau.lecturenotes.uiElements.PdfViewer.DragRectView
        android:id="@+id/dragRectItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ru.spbau.lecturenotes.uiElements.PdfViewer.ShowRectView
        android:id="@+id/showRectViewItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>